<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.hoadon.ThemHoaDonActivity">

    <EditText
        android:id="@+id/edMaHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã Hóa đơn"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edTenHD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Hóa đơn "
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/edTenKH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên khách hàng "
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/edTenSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/edUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/edDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Chọn ngày"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnPicDate"
            android:onClick="datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn" />
    </LinearLayout>
    <EditText
        android:id="@+id/edTongTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tổng hóa đơn "
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/edGhiChuHĐ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ghi chú hóa đơn "
        android:inputType="textPersonName" />
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnThemHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00D463"
        android:text="Thêm"
        android:textColor="#ffffff" />
    <Button
        android:layout_marginLeft="16dp"
        android:id="@+id/btnSuaHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#00D463"
        android:text="Cập nhật"
        android:textColor="#ffffff" />
</LinearLayout>

</LinearLayout>